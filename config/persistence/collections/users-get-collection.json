{
    "description": "Getting all the records from the 'users' collection",  
    "request":{  
        "method":"GET",
        "path":"/users"
    },
    "persist":{  
        "collection":"users"
    },
    "response":{  
        "statusCode":200,
        "headers":{  
            "Content-Type":[  
                "application/json"
            ]
        },
        "body":"{ \"items\": {{persist.collection.content}}, \"count\": {{persist.collection.count}} }"
    }
}